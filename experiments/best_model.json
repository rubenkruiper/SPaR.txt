{
    "dataset_reader": {
        "type": "tag_reader",
        "bert_model_name": "bert-base-cased",
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "max_length": 512,
                "model_name": "bert-base-cased"
            }
        }
    },
    "model": {
        "type": "my_tagger",
        "dropout": 0.01,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 384,
            "input_size": 768,
            "num_layers": 2
        },
        "feedforward": {
            "activations": "relu",
            "dropout": 0.01,
            "hidden_dims": 384,
            "input_dim": 768,
            "num_layers": 1
        },
        "include_start_end_transitions": false,
        "label_encoding": "DiscontiguousTest",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "pretrained_transformer",
                    "max_length": 512,
                    "model_name": "bert-base-cased",
                    "train_parameters": false
                }
            }
        },
        "verbose_metrics": false
    },
    "train_data_path": "data/train/",
    "validation_data_path": "data/val/",
    "trainer": {
        "callbacks": {
            "wandb": {
                "batch_size_interval": 1,
                "distribution_interval": 1,
                "entity": "rkruiper",
                "name": "BERTdr0.01_lstm_2_h384_ffnn_1_h384_0.005_16",
                "notes": "BERTdr0.01_lstm_2_h384_ffnn_1_h384_0.005_16",
                "project": "MWE-tagger",
                "should_log_learning_rate": true,
                "should_log_parameter_statistics": true,
                "summary_interval": 1
            }
        },
        "cuda_device": 0,
        "grad_norm": 1,
        "learning_rate_scheduler": {
            "type": "slanted_triangular"
        },
        "num_epochs": 50,
        "num_serialized_models_to_keep": 1,
        "optimizer": {
            "type": "huggingface_adamw",
            "correct_bias": true,
            "eps": 1e-08,
            "lr": 0.005,
            "parameter_groups": [
                [
                    [
                        "bias",
                        "LayerNorm\\.weight",
                        "layer_norm\\.weight"
                    ],
                    {
                        "weight_decay": 0.05
                    }
                ]
            ],
            "weight_decay": 0.1
        },
        "patience": 20,
        "validation_metric": "+f1-measure-overall"
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 16,
            "sorting_keys": [
                "tokens"
            ]
        }
    }
}